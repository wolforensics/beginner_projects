def calculator():

while True:           
 operator = input("Please choose an operation(+,-,/,*): ")
 try:
  number_1 = float(input("Please enter number 1: "))       
  number_2 = float(input("Please enter number 2: "))

 except ValueError:         
     print("Invalid number input. Please enter valid numbers.")
     continue               

 if operator == "+":             
   print(f"The result is {number_1 + number_2}.")
   break                     
 elif operator == "-":
   print(f"The result is {number_1 - number_2}.")
   break
 elif operator == "/":       
     try:
       print(f"The result is {number_1 / number_2}.")
       break
     except ZeroDivisionError:
         print("Division by 0 not possible.")
         continue
 elif operator == "*":
   print(f"The result is {number_1 * number_2}.")
   break

 else:                       
   print("Wrong operator.")
   continue

calculator()
